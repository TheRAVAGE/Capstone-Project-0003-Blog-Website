<%- include("partials/header.ejs")%>
<section id="FormEdit"></section>
    <div class="container px-0">
        <div class="mt-5 p-5 rounded-3 divBackground" style="background-color: #FFDBB5; border-radius: 10px; ">
          <h2 class="headingTitle">Edit...</h2><br>
            <form action="/form_edit_sub" method="POST">
            <h7><span class="headingTitle">ID :</span> <input type="none" name="ID" class="paragraph" style="width:0px; visibility: hidden;" value="<%=fromIdCheck.id%>"> <%=fromIdCheck.id%></output></h7><br>
            <div class=""><label class="paragraph">Title : </label><input name="titleName" type="textbox" class="formStyle" placeholder="Enter your title" style="height:40px; min-width: 92%; width: auto;" value="<%=fromIdCheck.name%>"></input></div>
            <br>
            <span class="headingTitle">Date :</span> <input name="dateOfCreation" style="width:0px; visibility: hidden;" value="<%=fromIdCheck.date%>"> <%=fromIdCheck.date%></input>
            <br><br>
            <label class="paragraph pr-2">Author : </label><input name="authorName" type="textbox" class="formStyle" placeholder="Enter your Name" style="height:40px; width: 92%;"value="<%=fromIdCheck.author%>"></input>
            <br><br>
            <label class="paragraph">Blog starts here : </label><textarea name="textContent" warp="hard" cols="40" rows="5" placeholder="Type away..." style="min-height:50vh; width: 100%;"><%=fromIdCheck.blog%></textarea>
            <br>
            <input type="submit" class="btn btn-primary" value="Save and Submit" style="border-radius: 30px; margin-top: 10px;"></input>
          </form>    
        </div>
      </div>
</section>
